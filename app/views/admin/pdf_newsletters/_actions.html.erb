<ul>
  <% if Admin::PdfNewslettersController.searchable? %>
    <li>
      <%= render :partial => "/shared/admin/search",
                  :locals => {
                    :url => admin_pdf_newsletters_path
                  } %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), new_admin_pdf_newsletter_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? and Admin::PdfNewslettersController.sortable? and PdfNewsletter.count > 1 %>
  <li>
    <%= link_to t('.reorder', :what => "Newsletters"),
                 admin_pdf_newsletters_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Newsletters"),
                 admin_pdf_newsletters_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
